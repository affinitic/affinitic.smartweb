<?xml version="1.0"?>
<object xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    name="affinitic.smartweb.SectionCopyLink"
    meta_type="Dexterity FTI"
    i18n:domain="affinitic.smartweb">

  <!-- Basic properties -->
  <property
      i18n:translate=""
      name="title">Section clone display</property>
  <property
      i18n:translate=""
      name="description">Clone display of another section</property>

  <property name="icon_expr">string:event</property>

  <!-- Hierarchy control -->
  <property name="global_allow">False</property>
  <property name="filter_content_types">True</property>
  <!-- Schema, class and security -->
  <!-- if we can add a page, we can add a page section -->
  <property name="add_permission">imio.smartweb.core.AddPage</property>
  <property name="klass">affinitic.smartweb.contents.SectionCopyLink</property>
  <property name="schema">affinitic.smartweb.contents.ISectionCopyLink</property>

  <!-- Enabled behaviors -->
  <property name="behaviors" purge="false">
    <element value="plone.namefromtitle"/>
    <element value="plone.locking"/>
    <element value="plone.shortname"/>
    <element value="plone.versioning" />
  </property>

</object>
